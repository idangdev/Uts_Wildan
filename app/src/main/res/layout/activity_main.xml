<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/wildan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/ic_background_topleftright"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Selamat datang Wildan"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Silahkan pilih menu"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/btnBerita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="18dp"
                        android:paddingTop="45dp"
                        android:background="@drawable/ic_background_topleft"
                        android:drawableTop="@drawable/ic_blogging"
                        android:drawablePadding="10dp"
                        android:text="Berita"
                        android:textSize="24sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite" />

                    <TextView

                        android:id="@+id/btnAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="18dp"
                        android:paddingTop="45dp"
                        android:background="@drawable/ic_background_bottomleft"
                        android:drawableTop="@drawable/ic_user"
                        android:drawablePadding="10dp"
                        android:text="Tentang"
                        android:textSize="24sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/btnClc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="18dp"
                        android:paddingTop="45dp"
                        android:background="@drawable/ic_background_topright"
                        android:drawableTop="@drawable/ic_calculator"
                        android:drawablePadding="10dp"
                        android:text="Kalkulator"
                        android:textSize="24sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite" />

                    <TextView

                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="18dp"
                        android:paddingTop="45dp"
                        android:background="@drawable/ic_background_bottomright"
                        android:drawableTop="@drawable/ic_logout"
                        android:drawablePadding="10dp"
                        android:text="Keluar"
                        android:textSize="24sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>